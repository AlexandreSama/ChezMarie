{% extends 'base.html.twig' %}

{% block title %}Nos {{ categoryName }} !{% endblock %}

{% block body %}
<main class="py-4 showProductMain">
    <div class="container">
        <div class="row">
            {% for product in productsWithPictures %}
            <div class="col-md-4 d-flex justify-content-center productCol">
                <div class="product-card">
                    {% if product.pictures[0] is defined %}
                    <img src="{{ asset('img/' ~ product.pictures[0].fileName) }}" alt="{{ product.name }}" class="product-image {{ product.productQuantity < 1 ? 'grayscale' : '' }}">
                    {% else %}
                    <img src="{{ asset('img/default.png') }}" alt="Image non disponible" class="product-image {{ product.productQuantity < 1 ? 'grayscale' : '' }}">
                    {% endif %}
                    <div class="product-info">
                        <h3 class="product-name">{{ product.name }}</h3>
                        {# <div class="product-rating">
                            {% for i in 1..5 %}
                            {% if i <= avgNote %} <span class="star">&#9733;</span>
                            {% else %}
                            <span class="star">&#9734;</span>
                            {% endif %}
                            {% endfor %}
                        </div> #}
                        {% if product.productQuantity < 1 %}
                        <button class="product-button"><i class="fa-solid fa-x"></i>Produit épuisé</button>
                        {% else %}
                        <button class="product-button showProductRating" href="{{path('show_product', {'productid': product.id})}}"data-bs-toggle="modal" data-bs-target="#productModal"><i class="fa-solid fa-arrow-right"></i>Voir le produit</button>
                        {% endif %}
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        <div class="d-flex justify-content-center mt-4">
            {{ knp_pagination_render(productsWithPictures) }}
        </div>
    </div>

    <div class="modal fade" id="productModal" tabindex="-1" aria-labelledby="productModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="productModalLabel">Détail du produit</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                </div>
            </div>
        </div>
    </div>
</main>
{% endblock %}