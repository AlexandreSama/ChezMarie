{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
<div class="row h-100 w-100">
    <div class="col-12 d-flex justify-content-evenly">
        <!-- Commandes en cours -->
        <div class="col-5 d-flex align-items-center flex-column">
            <h2>Commandes en cours</h2>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Client</th>
                        <th scope="col">Status</th>
                        <th scope="col">Produits</th>
                        <th scope="col">Date commande</th>
                        <th scope="col">Prix</th>
                        <th scope="col">Facture</th>
                    </tr>
                </thead>
                <tbody>
                    {% for order in ongoingOrders %}
                    <tr>
                        <th scope="row">{{ order.id }}</th>
                        <td>{{ order.customerName }} {{ order.customerFirstName }}</td>
                        <td>
                            {% if order.isIsPreparing %}
                            En préparation
                            {% elseif order.isIsPending %}
                            En attente
                            {% else %}
                            Non spécifié
                            {% endif %}
                        </td>
                        <td>
                            <a href="#" data-bs-toggle="modal" data-bs-target="#productsModal{{ order.id }}">
                                {{ order.archives|length }}
                            </a>
                        </td>
                        <td>{{ order.dateOrder|date('Y-m-d') }}</td>
                        <td>{{ order.fullPrice }}</td>
                        <td>
                            {% if order.invoice %}
                            <a href="{{ path('path_to_invoice', {'id': order.id}) }}">Télécharger</a>
                            {% else %}
                            Pas de facture
                            {% endif %}
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <!-- Commandes closes -->
        <div class="col-5 d-flex align-items-center flex-column">
            <h2>Commandes closes</h2>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Client</th>
                        <th scope="col">Status</th>
                        <th scope="col">Produits</th>
                        <th scope="col">Date commande</th>
                        <th scope="col">Prix</th>
                        <th scope="col">Facture</th>
                    </tr>
                </thead>
                <tbody>
                    {% for order in closedOrders %}
                    <tr>
                        <th scope="row">{{ order.id }}</th>
                        <td>{{ order.customerName }} {{ order.customerFirstName }}</td>
                        <td>
                            {% if order.isIsServed %}
                            Servi
                            {% elseif order.isIsNotServer %}
                            Non-récupéré
                            {% else %}
                            Non spécifié
                            {% endif %}
                        </td>
                        <td>{{ order.basket.getBasketProducts|length }}</td>
                        <td>{{ order.dateOrder|date('Y-m-d') }}</td>
                        <td>{{ order.fullPrice }}</td>
                        <td>{{ order.invoice ? 'Oui' : 'Non' }}</td>
                    </tr>
                    {% endfor %}
                </tbody>

                {% for order in ongoingOrders %}
                <div class="modal fade" id="productsModal{{ order.id }}" tabindex="-1"
                    aria-labelledby="productsModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="productsModalLabel">Détails des produits de la commande {{
                                    order.id }}</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <ul>
                                    {% for reference in order.archives %}
                                    <li>{{ reference.productName }} - Prix unitaire: {{ reference.fullPrice }}</li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
                {% for order in closedOrders %}
                <div class="modal fade" id="productsModal{{ order.id }}" tabindex="-1"
                    aria-labelledby="productsModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="productsModalLabel">Détails des produits de la commande {{
                                    order.id }}</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <ul>
                                    {% for reference in order.archives %}
                                    <li>{{ reference.productName }} - Prix unitaire: {{ reference.fullPrice }}</li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </table>
        </div>
    </div>
</div>
{% endblock %}